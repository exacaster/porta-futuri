{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/demo-site/*", "./src/*"],
      "@widget/*": ["./src/widget/*"],
      "@api/*": ["./src/api/*"],
      "@shared/*": ["./src/shared/*"],
      "@components/*": ["./src/demo-site/components/*"],
      "@pages/*": ["./src/demo-site/pages/*"],
      "@services/*": ["./src/demo-site/services/*"],
      "@hooks/*": ["./src/demo-site/hooks/*"],
      "@contexts/*": ["./src/demo-site/contexts/*"],
      "@utils/*": ["./src/demo-site/utils/*"],
      "@styles/*": ["./src/demo-site/styles/*"]
    },
    "types": ["node", "vitest/globals"]
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules", "dist", "supabase/functions"],
  "references": [{ "path": "./tsconfig.node.json" }]
}