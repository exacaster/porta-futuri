# Supabase Configuration
# Your Supabase project URL (e.g., https://[PROJECT_ID].supabase.co)
SUPABASE_URL=https://your-project.supabase.co

# Your Supabase anonymous/public key for client-side access
SUPABASE_ANON_KEY=your_anon_key_here

# Your Supabase service key for server-side operations (keep secure!)
SUPABASE_SERVICE_KEY=your_service_key_here

# Your Supabase database password (get from Supabase Dashboard > Settings > Database)
SUPABASE_DB_PASSWORD=your_database_password_here

# AI Services Configuration
# Your Anthropic API key for Claude integration
ANTHROPIC_API_KEY=your_claude_api_key_here

# Your OpenAI API key for GPT-4 fallback
OPENAI_API_KEY=your_openai_api_key_here

# Widget Configuration
# API endpoint URL for the widget to connect to
VITE_API_URL=http://localhost:54321/functions/v1

# Widget version for cache busting and tracking
VITE_WIDGET_VERSION=1.0.0

# Environment (development, staging, production)
NODE_ENV=development

# Optional: Analytics Configuration
# Google Analytics ID (optional)
VITE_GA_ID=

# Optional: Sentry DSN for error tracking (optional)
VITE_SENTRY_DSN=

# Rate Limiting Configuration
# Maximum requests per minute per API key
RATE_LIMIT_MAX_REQUESTS=100

# Cache Configuration  
# Cache TTL in seconds (default: 900 = 15 minutes)
CACHE_TTL=900

# CSV Processing Limits
# Maximum file size in bytes (default: 52428800 = 50MB)
MAX_CSV_SIZE=52428800

# Maximum number of products to process
MAX_PRODUCTS=10000

# Session Configuration
# Session timeout in minutes (default: 30)
SESSION_TIMEOUT=30

# CORS Configuration
# Allowed origins for CORS (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Feature Flags
# Enable/disable features (true/false)
FEATURE_CHAT_ENABLED=true
FEATURE_PROFILE_VIEW_ENABLED=true
FEATURE_ANALYTICS_ENABLED=false

# Development Tools
# Enable debug mode (true/false)
DEBUG=false

# Enable verbose logging (true/false)
VERBOSE_LOGGING=false